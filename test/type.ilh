#ifndef	__TYPE_ILH__
#define	__TYPE_ILH__

#define	byte	int8
#define	ubyte	uint8
#define	short	int16
#define	ushort	uint16

#if streq(__ARCH__, "32")
	#define	size_t uint32
	#define	ssize_t int32

	#define	int int32
	#define	uint uint32
	#define	long int32
	#define	ulong uint32

	struct __VaList {
		var a:*int8;
	}
#elif streq(__ARCH__, "64")
	#define	size_t uint64
	#define	ssize_t int64

	#define	int int32
	#define	uint uint32
	#define	long int64
	#define	ulong uint64

	struct __VaList {
		var a:int32;
		bar b:int32;
		var c:*int8;
		var d:*int8;
	}
#else
	#error unsupported architecture!
#endif

#define	va_list struct __VaList

#define	bool	int
#define	true	(1)
#define	false	(0)

#endif
